{
  "name": "react-dhtracker",
  "productName": "DHTracker",
  "version": "0.1.0",
  "description": "Time tracking application",
  "author": "Imran Siddiqui <imran.i.siddiqui@doyenhub.com>",
  "main": "public/electron.js",
  "homepage": "./",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.12.3",
    "@material-ui/icons": "^4.11.2",
    "@material-ui/lab": "^4.0.0-alpha.60",
    "axios": "^0.21.1",
    "iohook": "^0.9.3",
    "node-sass": "^6.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-redux": "^7.2.4",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.3",
    "redux-saga": "^1.1.3",
    "sqlite3": "^5.0.2"
  },
  "scripts": {
    "react-start": "cross-env PORT=3000 react-scripts start",
    "react-build": "react-scripts build",
    "react-test": "react-scripts test",
    "react-eject": "react-scripts eject",
    "electron-build": "electron-builder",
    "build": "npm run react-build && npm run electron-build",
    "start": "concurrently \"cross-env BROWSER=none npm run react-start\" \"wait-on http://localhost:3000 && electron .\"",
    "postinstall": "electron-builder install-app-deps"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "concurrently": "^6.2.0",
    "electron": "^12.0.16",
    "electron-builder": "^22.11.11",
    "wait-on": "^5.3.0",
    "cross-env": "^7.0.3"
  },
  "build": {
    "productName": "DHTracker",
    "appId": "com.electron.dhtracker",
    "copyright": "Copyright Â© 2021 ${author}",
    "win": {
      "icon": "public/assets/images/icon.ico",
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "icon": "public/assets/images/icon.png",
      "target": [
        "AppImage"
      ],
      "category": "Office"
    },
    "mac": {
      "icon": "public/assets/images/icon.icns",
      "target":[
        "dmg"
      ],
      "type": "distribution",
      "hardenedRuntime": true,
      "entitlements": "public/assets/entitlements.mac.plist",
      "entitlementsInherit": "public/assets/entitlements.mac.plist",
      "gatekeeperAssess": false
    },
    "nsis": {
      "oneClick": false
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    }
  },
  "iohook": {
    "targets": [
      "node-83",
      "electron-87"
    ],
    "platforms": [
      "win32",
      "darwin",
      "linux"
    ],
    "arches": [
      "x64",
      "ia32"
    ]
  }
}